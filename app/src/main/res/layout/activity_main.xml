<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorWhite"
    android:orientation="vertical">

    <com.loper7.layout.TitleBar
        android:layout_width="match_parent"
        android:layout_height="50dp"
        app:tBackgroundColor="@color/colorPrimary"
        app:tTitleText="@string/app_name"
        app:tTitleTextColor="@color/colorTextWhite"
        app:tTitleTextSize="18sp" />

    <com.loper7.editquantityview.EditQuantityView
        android:id="@+id/editQuantityView"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:background="@drawable/shape_edit_quantity_background"
        app:eAddText="+"
        app:eAddTextColor="@color/colorTextGray"
        app:eButtonTextSize="14sp"
        app:eEditBackgroundRes="@drawable/shape_edit_input_bg"
        app:eEditTextColor="@color/colorTextGray"
        app:eEditTextSize="14sp"
        app:eEditWidth="40dp"
        app:eQuantity="1"
        app:eMinQuantity="1"
        app:eSubtractText="-"
        app:eSubtractTextColor="@color/colorTextGray" />


</LinearLayout>
